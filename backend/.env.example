# Django Settings
# Required for production, optional for development (has defaults)
DEBUG=True
SECRET_KEY=your-secret-key-for-development-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend URL (for OAuth redirects)
# Required if using OAuth, otherwise defaults to http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database Configuration
# For PostgreSQL (default):
DB_ENGINE=postgresql
DB_NAME=topthree
DB_USER=topthree
DB_PASSWORD=topthree
DB_HOST=localhost
DB_PORT=5432

# For SQLite (easier local development - set DB_ENGINE=sqlite):
# DB_ENGINE=sqlite
# (Other DB_* variables are ignored when using SQLite)

# Google OAuth (Optional - only needed if using Google login)
# Get these from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Facebook OAuth (Optional - only needed if using Facebook login)
# Get these from: https://developers.facebook.com/
FACEBOOK_APP_ID=your-facebook-app-id-here
FACEBOOK_APP_SECRET=your-facebook-app-secret-here

# Security Settings (Optional - defaults are fine for development)
# SECURE_SSL_REDIRECT=False
# SESSION_COOKIE_SECURE=False
# CSRF_COOKIE_SECURE=False

# Logging (Optional - defaults are fine)
# LOG_LEVEL=INFO
# DJANGO_LOG_LEVEL=INFO
